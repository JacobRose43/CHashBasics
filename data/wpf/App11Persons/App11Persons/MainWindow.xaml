        <TextBox x:Name="FNameTBox" HorizontalAlignment="Left" Height="23" Margin="411,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="313,38,0,0" VerticalAlignment="Top" Width="93"/>
        <TextBox x:Name="LNameTBox" HorizontalAlignment="Left" Height="23" Margin="411,38,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Wiek" HorizontalAlignment="Left" Margin="313,69,0,0" VerticalAlignment="Top" Width="93"/>
        <Slider x:Name="AgeSlider" Minimum="0" Maximum="200" ValueChanged="Slider_ValueChanged" HorizontalAlignment="Left" Margin="361,77,0,0" VerticalAlignment="Top" Width="195"/>
        <TextBlock x:Name="AgeTBlock" FontSize="20" HorizontalAlignment="Left" Margin="572,68,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="430,123,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
