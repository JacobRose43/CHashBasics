<Window x:Class="wzw13Aka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wzw13Aka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox HorizontalAlignment="Center" VerticalAlignment="Center" Header="Math">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBox x:Name="number1Tbox"  TextWrapping="Wrap" TextChanged="number1Tbox_TextChanged" Height="15" Width="100" Margin="15,0,15,0"/>
                <TextBox x:Name="number2Tbox" TextWrapping="Wrap" TextChanged="number2Tbox_TextChanged" Height="15" Width="100" Margin="15,0,15,0"/>
                <Label Content="*"  Height="33" Width="17" Margin="15,0,15,0"/>
                <Button x:Name="button1" Content="=" Height="19" Width="40" Click="button1_Click" Margin="15,0,15,0"/>
                <TextBlock x:Name="resultTblock" Text="" TextWrapping="Wrap"  Height="15" Width="100" Foreground="Black" Margin="15,0,15,0"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
